---
import logo from '../assets/logo.svg?raw';
const { size = '1.5em' } = Astro.props;
---

<style>
  .logo {
    width: 1.5em;
    height: 1.5em;
    color: var(--color-surface-0);
    padding-top: 3px;
    display: inline-block;
    flex-shrink: 0;
  }

  .logo svg {
    width: 100%;
    height: 100%;
  }
</style>

<div
  class="logo"
  style={`width:${size}; height: ${size}`}
>
  <Fragment set:html={logo} />
</div>
