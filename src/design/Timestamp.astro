---
import { type LanguagesValue } from '../util/languages.ts';

import { useUiTranslation } from '../util/use-ui-translation';

interface Props {
  lastChecked: Date;
  lang: LanguagesValue;
}

const { lastChecked, lang } = Astro.props;
---

{useUiTranslation('meta.updated', lang)}
<time datetime={lastChecked.toISOString()}
  >{lastChecked.toLocaleDateString(lang)}</time
>
