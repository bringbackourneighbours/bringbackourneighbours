---
interface Props {
  level?: 1 | 2 | 3 | 4 | 5;
}

// TODO: we dont need all the props but the ID for the TOC
const { level = 2 } = Astro.props;

const shiftedLevel = level + (Astro.locals?.levelShift ?? 0);

const HeadingElement = `h${shiftedLevel.toFixed()}`;
---

<style>
  :is(h1, h2, h3, h4, h5, h6) {
    page-break-after: avoid;
    page-break-inside: avoid;
  }
</style>

<HeadingElement {...Astro.props}>
  <slot />
</HeadingElement>
