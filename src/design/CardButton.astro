---
import type { LanguagesValue } from '../util/languages';

import Card from './Card.astro';

interface Props {
  lang?: LanguagesValue;
  size?: 'p' | 'h2' | 'h3' | 'h4';
  variant?: 'primary' | 'secondary';
  invalid?: boolean;
  smaller?: boolean;
  id?: string;
}

const {
  lang = Astro.locals.lang,
  variant = 'primary',
  invalid = false,
  size = 'p',
  smaller = true,
  id = undefined,
} = Astro.props;
---

<style>
  button {
    all: unset;
  }
</style>

<button id={id}>
  <Card
    lang={lang}
    variant={variant}
    invalid={invalid}
    size={size}
    smaller={smaller}
  >
    <slot />
  </Card>
</button>
