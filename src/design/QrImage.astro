---
import { toDataURL } from 'qrcode';

interface Props {
  url: string;
}

const { url } = Astro.props;

// TODO: types are not working... astro why you allways like this!
const qrCodeImage = await toDataURL(url, {
  color: {
    dark: '#0000ff', // FIXME: use matching colors
    light: '#ffff00',
  },
});
---

<img
  src={qrCodeImage}
  alt="QR Code"
/>
