---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardLink from '../design/CardLink.astro';
import { useUiTranslation } from '../util/use-ui-translation';
---

<BaseLayout
  lang="de"
  title=`${await useUiTranslation('meta.title', 'de')} | ${await useUiTranslation('meta.subtitle', 'de')}`
  classes="wide"
>
  <CardLink>
    {useUiTranslation('wizard.isThereDangerQuestion', 'fr')}
  </CardLink>
  <CardLink direction="rtl">
    {useUiTranslation('wizard.isThereDangerQuestion', 'ar')}
  </CardLink>
  <CardLink direction="rtl">
    {useUiTranslation('wizard.isThereDangerQuestion', 'ur')}
  </CardLink>
  <CardLink
    href=`${Astro.site}de/flyer/detention/abschiebehaft`
    lang="de"
  >
    {useUiTranslation('wizard.isThereDangerQuestion', 'de')}
  </CardLink>
  <CardLink>
    {useUiTranslation('wizard.isThereDangerQuestion', 'ka')}
  </CardLink>
  <CardLink
    href=`${Astro.site}en/flyer/detention`
    lang="en"
  >
    {useUiTranslation('wizard.isThereDangerQuestion', 'en')}
  </CardLink>
  <CardLink>
    {useUiTranslation('wizard.isThereDangerQuestion', 'es')}
  </CardLink>
</BaseLayout>
