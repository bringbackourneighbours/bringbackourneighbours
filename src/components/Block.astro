---
import { DEFAULT_LANG, type LanguagesValue } from '../util/languages';
import { getCollection } from 'astro:content';
import MarkdownEntry from '../design/MarkdownEntry.astro';

interface Props {
  identifier: string;
  lang: LanguagesValue;
}

const { identifier, lang = DEFAULT_LANG } = Astro.props;

const blockEntries = await getCollection('blocks', (block) => {
  return block.slug === `${identifier}/${lang}`;
});
---

<style>
  a,
  a:active,
  a:visited,
  a:hover {
    color: var(--color-primary);
    border-bottom: 2px dashed var(--color-primary);
  }
</style>
<MarkdownEntry rendered={blockEntries[0].render()} />
