---
import { type LanguagesValue } from '../../model/languages.ts';

import { useUiTranslation } from '../../content/use-ui-translation.ts';

export interface Props {
  lastChecked: Date;
  lang: LanguagesValue;
}

const { lastChecked, lang } = Astro.props;
---

{useUiTranslation('meta.updated', lang)}
<time datetime={lastChecked.toISOString()}
  >{lastChecked.toLocaleDateString(lang)}</time
>
