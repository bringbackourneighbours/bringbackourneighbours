---
import Accordion from '../design/Accordion.astro';

/**
 * Renders a secondary accordion box with a title and content inside
 *
 * Use to add additional information directed at supporters in the Markdown content
 */
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Accordion
  title={title}
  variant="secondary"
  level={3}
>
  <slot />
</Accordion>
