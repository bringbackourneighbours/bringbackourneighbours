---
import { getCollection } from 'astro:content';

const allPages = await getCollection('pages');
const allFlyers = await getCollection('flyers');
import logo from '/public/icons/logo.svg?raw';
import AnimatedCloseButton from './AnimatedCloseButton.astro';
---

<style>
  header {
    background: var(--color-secondary-2);

    /* background: linear-gradient(
      1deg,
      var(--color-secondary-2),
      var(--color-secondary-3),
      var(--color-secondary-2)
    ); */
    color: var(--color-surface-1);
    display: flex;
    gap: 1em;

    /* background: linear-gradient(135deg, #e93b1d 0%, var(--color-secondary) 50%, #e93b1d 100%); */
    justify-content: space-between;
    position: sticky;
    top: 0;
    padding: 1.5rem;
    box-shadow:
      0 8px 0 0 var(--color-secondary-1),
      /* inset 1px 0 9px rgb(0 0 0 / 30%), */ 2px 0 14px 10px rgb(0 0 0 / 30%);
  }

  a,
  a:hover,
  a:visited,
  a:active {
    color: var(--color-surface-0);
    text-decoration: none;
    border-bottom: 0;
  }

  .logo,
  .menu-icon {
    width: 1.5em;
    height: 1.5em;
    color: var(--color-surface-0);
  }

  .menu-icon {
    width: 1.5em;
    height: 1.5em;
    color: var(--color-surface-0);
  }

  .logo {
    padding-top: 3px;
  }

  .logo svg,
  .menu-icon svg {
    width: 100%;
    height: 100%;
  }

  /* main_nav should be a modal fullscreen */
  #main-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: var(--color-surface-0);
    color: var(--color-secondary);
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    box-sizing: border-box;
    padding: 4rem;
  }

  #main-nav a,
  #main-nav a:hover,
  #main-nav a:visited,
  #main-nav a:active {
    color: var(--color-secondary);
    text-decoration: none;
    border-bottom: 0;
  }

  a h1,
  a h2 {
    margin: 0;
  }

  @media (width <= 600px) {
    header {
      gap: 0.1em;
    }

    header h1 {
      font-size: 1.4em !important;
    }
  }
</style>
<header>
  <div class="logo">
    <Fragment set:html={logo} />
  </div>
  <!-- TODO: Put language sensitive link here -->
  <a href={`${Astro.site}`}>
    <h1 class="h3">Bring Back Our Neighbours</h1>
  </a>
  <AnimatedCloseButton
    onclick="document.getElementById('main-nav').classList.toggle('hidden');"
  />

  <nav
    id="main-nav"
    class="hidden"
  >
    <h2>Pages</h2>
    <ul class="semantic-list">
      <li><a href={`${Astro.site}/showcase`}>SHOWCASE</a></li>
      {
        allPages.map((page) => (
          <li>
            {page.data.lang}:
            <a
              href={`${Astro.site}${page.data.lang}/page/${page.data.identifier}/${page.data.seo}`}
              hreflang={page.data.lang}
            >
              {page.data.title}
            </a>
            or
            <a
              href={`${Astro.site}${page.data.lang}/page/${page.data.identifier}`}
              hreflang={page.data.lang}
            >
              {page.data.identifier}
            </a>
          </li>
        ))
      }
    </ul>
    <section>
      <h2>Flyers</h2>
      <ul class="semantic-list">
        {
          allFlyers.map((flyer) => (
            <li>
              {flyer.data.lang}:
              <a
                href={`${Astro.site}${flyer.data.lang}/flyer/${flyer.data.identifier}/${flyer.data.seo}`}
                hreflang={flyer.data.lang}
              >
                {flyer.data.title}
              </a>
              or
              <a
                href={`${Astro.site}${flyer.data.lang}/flyer/${flyer.data.identifier}`}
                hreflang={flyer.data.lang}
              >
                {flyer.data.identifier}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </nav>
</header>
