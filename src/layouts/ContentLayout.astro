---
import WebLayout from './WebLayout.astro';

import { DEFAULT_LANG, type LanguagesValue } from '../model/languages';

interface Props {
  title: string;
  seo: string;
  lang: LanguagesValue;
  canonicalSlug?: string;
  translationSlugs?: Array<{
    lang: LanguagesValue;
    url: string;
  }>;
}

const {
  title,
  seo,
  lang = DEFAULT_LANG,
  canonicalSlug,
  translationSlugs,
} = Astro.props;
---

<style>
  .content-wrapper {
    display: flex;
    justify-content: center;

    main {
      max-width: var(--bbon-size-max-text-span);
      background-color: var(--bbon-color-surface);
      padding: var(--bbon-size-gap);
      overflow: auto;

      /*
      padding so the language switcher has enough room
       */
      padding-block-end: calc(
        var(--bbon-size-gap) + 2 * var(--bbon-size-spacing) + 3.5em
      );
    }
  }
</style>

<WebLayout
  title={title}
  lang={lang}
  seo={seo}
  canonicalSlug={canonicalSlug}
  translationSlugs={translationSlugs}
>
  <div class="content-wrapper">
    <main>
      <slot />
    </main>
  </div>
</WebLayout>
