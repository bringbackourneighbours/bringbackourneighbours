---
import { type LanguagesValue } from '../model/languages';

import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  lang: LanguagesValue;
}

const { lang, title } = Astro.props;

import './theme-print.css';

const format = Astro.locals.isZine ? 'a7' : Astro.locals.isFlyer ? 'a6' : 'a4';
---

<BaseLayout
  title={title}
  lang={lang}
  seo=""
  format={format}
  allowIndexing={false}
>
  <slot />
</BaseLayout>
