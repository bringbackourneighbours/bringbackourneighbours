---
import { type LanguagesValue } from '../util/languages';

import BaseBody from './BaseBody.astro';
import BaseHtml from './BaseHtml.astro';

interface Props {
  title: string;
  lang: LanguagesValue;
}

const { lang, title } = Astro.props;
---

<style>
  :root {
    --bbon-color-primary: red;
    --bbon-size-p: 9pt;
    --bbon-size-p-line: 1.2;
    --bbon-size-h1: 24pt;
    --bbon-size-heading-line: 1.2;
    --bbon-size-h2: 1rem;
    --bbon-size-h2-margin-start: 0.1em;
    --bbon-size-h3: 1rem;
    --bbon-size-h4: 1rem;
    --bbon-size-spacing: 0.1em;
    --bbon-size-gap: 1em;
    --bbon-size-shadow-spread: 10px;
    --bbon-size-border: 1pt;
    --bbon-size-max-text-span: 80ch;
  }
</style>

<BaseHtml lang={lang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <BaseBody lang={lang}>
    <slot />
  </BaseBody>
</BaseHtml>
