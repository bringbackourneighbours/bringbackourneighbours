---
import { getLanguageDirection } from '../util/get-language-direction';

interface Props {
  lang: string;
}

// TODO: Remove unused variants later
import '@fontsource/firago/400.css';
import '@fontsource/firago/500.css';
import '@fontsource/firago/600.css';
import '@fontsource/firago/400-italic.css';
import '@fontsource/firago/500-italic.css';
import '@fontsource/firago/600-italic.css';
import '../base.css';

const { lang } = Astro.props;
---

<html
  lang={lang}
  dir={`${getLanguageDirection(lang)}`}
>
  <slot />


</html>
