---
import firagoLatinAllNormalCss from '@fontsource/firago/latin.css?url';
import firagoLatinAllItalicCss from '@fontsource/firago/latin-italic.css?url';

// all the fonts will be loaded by the fontface, but we want to preload the most used
import firagoLatin400NormalWoff2 from '@fontsource/firago/files/firago-latin-400-normal.woff2?url';
import firagoLatin500NormalWoff2 from '@fontsource/firago/files/firago-latin-500-normal.woff2?url';
---

<link
  rel="preload"
  as="font"
  type="font/woff2"
  href={firagoLatin400NormalWoff2}
  crossorigin="anonymous"
/>
<link
  rel="preload"
  as="font"
  type="font/woff2"
  href={firagoLatin500NormalWoff2}
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href={firagoLatinAllNormalCss}
  as="style"
/>
<link
  rel="stylesheet"
  href={firagoLatinAllNormalCss}
/>
<link
  rel="stylesheet"
  href={firagoLatinAllItalicCss}
/>

<style>
  body.font-latin {
    font-family: FiraGO, sans-serif;
  }
</style>
